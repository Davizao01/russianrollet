    <div>
        <h1>Contagem: <span id="contador">10</span></h1>
        <button onclick="girar()">Gire</button>
        <p id="mensagem"></p>
    </div>

    <script>
        let contador = 10;

        function girar() {
            if (contador > 1) {
                contador--;
                document.getElementById("contador").textContent = contador;
            } else {
                document.getElementById("mensagem").textContent = "Apagando System32... Brincadeira! Seu sistema est√° seguro.";
            }
        }
    </script>

